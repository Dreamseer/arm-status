{
  "name": "arm-status",
  "private": true,
  "version": "1.0.0",
  "description": "The latest news on Marc‘s arm – live from the Web!",
  "license": "MIT",
  "repository": "github:mrcgrtz/arm-status",
  "author": {
    "name": "Marc Görtz",
    "email": "git@marcgoertz.de",
    "url": "https://marcgoertz.de/"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npx eleventy",
    "prepare": "husky install",
    "start": "npx eleventy --serve",
    "test": "xo && stylelint **/*.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "clean-css": "^5.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "stylelint": "^14.8.5",
    "stylelint-config-standard": "^26.0.0",
    "xo": "^0.50.0"
  },
  "lint-staged": {
    "**/*.c?js": "xo --fix",
    "**/*.css": "stylelint --fix"
  },
  "xo": {
    "space": true,
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "color-named": "never",
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": [
        "always",
        {
          "except": [
            "empty"
          ]
        }
      ],
      "indentation": 2,
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "selector-attribute-quotes": "always",
      "selector-no-vendor-prefix": true,
      "string-quotes": "double"
    }
  }
}
